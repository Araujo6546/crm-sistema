# Dockerfile otimizado para Railway com Gunicorn
FROM python:3.11-slim

# Definir diret√≥rio de trabalho
WORKDIR /app

# Copiar requirements e instalar depend√™ncias
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir gunicorn==21.2.0

# Copiar c√≥digo fonte
COPY src/ ./src/
COPY wsgi.py .
COPY init_admin.py .

# Criar script de inicializa√ß√£o
RUN echo '#!/bin/bash\n\
echo "üîß Inicializando sistema CRM..."\n\
python init_admin.py\n\
echo "üöÄ Iniciando Gunicorn..."\n\
exec gunicorn --bind 0.0.0.0:$PORT --workers 2 --threads 4 --timeout 120 --access-logfile - --error-logfile - wsgi:app\n\
' > /app/start.sh && chmod +x /app/start.sh

# Expor porta
EXPOSE 8080

# Comando de inicializa√ß√£o
CMD ["/app/start.sh"]

